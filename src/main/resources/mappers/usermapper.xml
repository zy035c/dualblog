<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ex.dualblog.mapper.UserMapper">

    <select id="getAllUsers" resultType="com.ex.dualblog.model.User">
        SELECT * FROM User;
    </select>

    <insert id="addUser" parameterType="com.ex.dualblog.model.User">
        INSERT INTO User (id, username, phone, email, password)
        VALUES (#{id}, #{username},#{phone},#{email},#{password})
    </insert>

    <!-- <select id="userLogin" resultType="com.ex.dualblog.model.User">
        SELECT * FROM users WHERE username = #{username}
    </select> -->

    <select id="findUserByEmailAndPassword" parameterType="com.ex.dualblog.model.User" resultType="com.ex.dualblog.model.User">
        SELECT * FROM User WHERE email = #{email} AND password = #{password}
    </select>

    <select id="findUserByID" resultType="com.ex.dualblog.model.User">
        SELECT * FROM User WHERE id = #{id}
    </select>

    <delete id="deleteUserByID">
        DELETE FROM User WHERE id = #{id}
    </delete>
</mapper>